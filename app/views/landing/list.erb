<div id="nav">
  <a href="/list" <% if @platform == nil %>class="active"<% end %>>all</a>
  <% (@platforms).each do |p| %>
    <a href="/<%= p.slug %>" title="<%=h p.name %>" <% if @platform == p %>class="active"<% end %>>
      <% if p.image %><img src="<%= p.image %>"/><% end %>
      <%=h p.name %>
    </a>
  <% end %>
</div>
<% if @country!=nil %>
  <div id="current_country">
    <%= @country['code'] %> / <%= @country['name'] %>
  </div>
<% end %>

